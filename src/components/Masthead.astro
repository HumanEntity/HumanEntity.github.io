---
import { Image } from 'astro:assets' // "@astrojs/image/components";
---

<section class="relative mb-6 h-96 flex justify-center items-center">
  <div class="absolute w-full overflow-hidden">
    <Image
      class="inset-0 min-w-full min-h-full object-cover opacity-30 h-96"
      src="/blog-placeholder-2.jpg"
      width={960}
      height={480}
      format="jpg"
      alt="Test"
    />
  </div>
  <div class="z-10 text-center px-8 drop-shadow-lg shadow-black">
    <div class="uppercase text-sm mb-4">Welcome to</div>
    <div class="text-4xl font-mplus font-medium">
      My <span class="text-orange-500">website</span>
    </div>
  </div>
</section>
